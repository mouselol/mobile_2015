<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myBaseLL"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/myButtonsLL"
        >
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="&lt;"
        android:id="@+id/buttonLeft"
        android:onClick="buttonLeft_Click"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/buttonStart"
        android:layout_gravity="right"
        android:onClick="buttonStart_Click"
        />
    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/buttonStop"
        android:onClick="buttonStop_Click"
        />
    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Пуск"
        android:id="@+id/buttonBomb"
        android:layout_gravity="center_horizontal"
        android:onClick="buttonBomb_Click"
        />

    <Button
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="&gt;"
        android:id="@+id/buttonRight"
        android:onClick="buttonRight_Click"
        />
    </LinearLayout>

</LinearLayout>